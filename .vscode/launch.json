{
  "version": "0.2.0",
  "configurations": [
      {
          "type": "node",
          "request": "launch",
          "name": "Launch Program",
          "skipFiles": ["<node_internals>/**"],
          "program": "${workspaceFolder}/index.js",
          "preLaunchTask": "Build"
      },
      {
          "type": "node",
          "request": "attach",
          "name": "Attach to Process",
          "processId": "${command:PickProcess}"
      }
  ]
}